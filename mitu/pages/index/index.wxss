/**index.wxss**/
.list {
  width: 690rpx;
  height: auto;
  margin: 0 auto 40rpx auto;
}

.list-banner {
  width: 100%;
  height: 375rpx;
  margin-bottom: 20rpx;
}

.list-title {
  width: 100%;
  height: auto;
  color: #000000;
  font-size: 32rpx;
  text-align: justify;
}

.list-tip {
  width: 100%;
  font-size: 18rpx;
  color: #757475;
  margin-top: 10rpx;
  display: none;
}

.list-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}

.list-price {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 25rpx;
  font-family: "Gotham";
}

.list-everyNight {
  font-size: 30rpx;
  color: #757475;
}

.list-tips {
  display: none;
  width: 100%;
  font-size: 16rpx;
  color: #757475;
}

.list-one {
  height: 100%;
  margin: 0 auto;
}

.list-one .list-banner {
  width: 100%;
  height: 815rpx;
  background-color: green;
  margin-bottom: 30rpx;
}

.list-one .list-title {
  font-weight: bold;
  width: 650rpx;
  height: auto;
  line-height: 48rpx;
  font-size: 36rpx;
  color: #332c2b;
  margin: 0 auto;
  text-align: justify;
}

.list-one .list-tip {
  display: block;
  width: 650rpx;
  font-size: 24rpx;
  color: #757475;
  margin: 20rpx auto 0 auto;
}

.list-one .list-info {
  width: 650rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
  margin: 30rpx auto 0 auto;
}

.list-one .list-price {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 25rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.list-one .list-everyNight {
  font-size: 30rpx;
  color: #757475;
}

.list-one .list-tips {
  display: block;
  width: 650rpx;
  margin: 0 auto;
  font-size: 20rpx;
  color: #757475;
}