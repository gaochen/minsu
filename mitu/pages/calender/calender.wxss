.header {
    width: 742rpx;
    margin: 0 4rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #e5e5e5;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}
.header-text {
    width: 106rpx;
    text-align: center;
    font-size: 28rpx;
    color: #474443;
}
.footer {
    width: 100%;
    height: 250rpx;
    border-top: 1rpx solid #e5e5e5;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}
.footer-text {
    margin-left: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
}
.footer-text view {
    font-size: 32rpx;
    color: #757475;
    line-height: 64rpx;
}
.footer-text view text {
    color: #ffffff;
    font-weight: bold;
    background-color: #332c2b;
    padding: 0 6rpx;
}
.footer-qrcode {
    width: 180rpx;
    height: 180rpx;
    margin-right: 60rpx;
    background-color: #cccccc;
}
.body {
    padding: 81rpx 0 251rpx 0;
}