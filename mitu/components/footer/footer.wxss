.wx-footer {
  width: 100%;
  height: 160rpx;
  /* border-top: 1rpx solid #cccccc; */
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -1rpx 5rpx 0 rgba(204, 204, 204, 0.6);
  z-index: 100;
  background-color: #fff;
}

.wx-footer-contL {
  width: 350rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 60rpx;
}

.wx-footer-contL-basicInfo {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.wx-footer-contL-basicInfo-price {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 25rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
}

.wx-footer-contL-basicInfo-everyNight {
  font-size: 30rpx;
  color: #757475;
}

.wx-footer-contL-tips {
  width: 100%;
  font-size: 20rpx;
  color: #757475;
}

.wx-footer-contR {
  width: 275rpx;
  height: 79rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 36rpx;
  color: #332c2b;
  margin-right: 60rpx;
}